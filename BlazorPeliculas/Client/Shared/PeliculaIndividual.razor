<div>
    <p>Titulo:  <b>@Pelicula.Titulo</b></p>
    <p>Lanzamiento:  <b>@Pelicula.Lanzamiento</b></p>
    @if (MostrarBotones)
    {
        <div>
            <button @onclick="@(() =>EliminarPelicula.InvokeAsync(Pelicula))">Borrar</button>
        </div>
    }
</div>
@code {
    [Parameter] public Pelicula Pelicula { get; set; }
    [Parameter] public bool MostrarBotones { get; set; } = false;
    [Parameter] public EventCallback<Pelicula> EliminarPelicula { get; set; }

}